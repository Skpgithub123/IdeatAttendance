<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/appred"
android:id="@+id/container"
android:layout_centerVertical="true"
android:fillViewport="true"
tools:context="app.msupply.com.ideatattendance.Activity.LoginActivity">



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1.5">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/idea_logoheader"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="2.5"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/loginshape"
                android:drawableLeft="@drawable/smalluser"
                android:drawablePadding="10dp"
                android:hint="Enter email"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColor="@color/block"
                android:textCursorDrawable="@drawable/cursorcolor"
                android:textSize="15sp" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/loginshape"
                    android:drawableLeft="@drawable/smallpass"
                    android:drawablePadding="10dp"
                    android:hint="Enter password"
                    android:imeOptions="actionDone"
                    android:inputType="number|numberPassword"
                    android:padding="15dp"
                    android:textColor="@color/block"
                    android:textCursorDrawable="@drawable/cursorcolor"
                    android:textSize="15sp" />


                <ImageView
                    android:id="@+id/img_login_visibilityoff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:visibility="visible"
                    android:src="@drawable/visioff" />

                <ImageView
                    android:id="@+id/img_login_visibilityon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:src="@drawable/dpass"
                    android:visibility="gone" />



            </FrameLayout>


            <TextView
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="18dp"
                android:background="@color/yellow_400"
                android:gravity="center"
                android:padding="15dp"
                android:text="Signin"
                android:textColor="@color/block"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/Tv_forgotpass"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:text="forgotpass"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/link_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/yellow_400"
                android:clickable="true"
                android:gravity="center"
                android:padding="15dp"
                android:text="Signup"
                android:textColor="@color/block"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true">

                                <TextView
                                    android:id="@+id/link_signup"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="15dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:textColor="#000"
                                    android:textSize="18sp"
                                    android:background="@color/yellow_400"
                                    android:textStyle="bold"
                                    android:clickable="true"
                                    android:text="Sign Up"
                                    android:gravity="center"/>

                                </LinearLayout>

                            </RelativeLayout>-->


        </LinearLayout>


    </LinearLayout>


</ScrollView>
</RelativeLayout>