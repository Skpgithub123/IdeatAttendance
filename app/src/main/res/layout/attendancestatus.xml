<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context="app.msupply.com.ideatattendance.MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display the Details of Calender"
        android:padding="15dp"
        android:textColor="#fff"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:background="@color/appred"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/calendaicon"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="15sp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Display the details of Attance every user"
        android:background="@color/amber_900"/>






</LinearLayout>
